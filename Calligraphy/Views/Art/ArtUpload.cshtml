@using Calligraphy.ViewModel
@model ArtViewModel
@{
    ViewData["Title"] = "作品上傳";
}
@section Styles{
    <link href="~/css/artupload.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/assets/css/styles.min.css" rel="stylesheet" />
}
<!-- From Uiverse.io by Yaya12085 -->
<form class="d-flex justify-content-center" enctype="multipart/form-data" asp-action="ArtUpload" method="post">
    <div class="container">
        <!-- From Uiverse.io by Yaya12085 -->
        <label class="custum-file-upload" asp-for="File">
