            </div>
            <div class="text">
                <span>Click to upload image</span>
            </div>
            <input type="file" asp-for="File">
            <span>@Html.ValidationMessageFor(model => model.File, "", new{ @class = "text-danger" })</span>
        </label>
        <!-- From Uiverse.io by vinodjangid07 -->
        <div class="d-flex justify-content-center mt-2">
            <div class="button delete me-3">
                <svg viewBox="0 0 448 512" class="svgIcon"><path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"></path></svg>
            </div>
            <!-- From Uiverse.io by gharsh11032000 -->
            <div class="magnifier" style="display:none;" data-bs-toggle="modal" data-bs-target="#pic">
                <span class="span">🔎</span>
            </div>
        </div>
        <!--圖片開窗-->
        <div class="modal fade" id="pic" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-body picbody">
                        
                    </div>
                </div>
            </div>
        </div>
        <div class="contain">
        </div>
        <div class="row d-flex justify-content-around mt-3">
            <!-- From Uiverse.io by Maximinodotpy -->
            <div class="row col-lg-5">
                <div class="inputGroup">
                    <input type="text" class="input" asp-for="Title" placeholder="作品名稱" autocomplete="off" />
                    <span>@Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })</span>
                </div>
                <div class="inputGroup">
                    <textarea asp-for="Content" class="input" style="resize:none;" placeholder="作品簡介" id="content" name="content" rows="5" cols="30"></textarea>
                </div>
            </div>
            <div class="row col-lg-5">
                <div class="inputGroup">
                    <input asp-for="Year" class="input" type="text" placeholder="創作日期 ex:@DateTime.Now.ToString("yyyy/MM/dd")" autocomplete="off" />
                    <span>@Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })</span>
                </div>
                <div class="inputGroup">
                    <input asp-for="Style" class="input" type="text" placeholder="作品風格" autocomplete="off" />
                </div>
                <div class="inputGroup">
                    <input asp-for="Material" class="input" type="text" placeholder="作品材質" autocomplete="off" />
                </div>
                <div class="inputGroup">
                    <input asp-for="Size" class="input" type="text" placeholder="作品尺寸" autocomplete="off" />
                </div>
            </div>
            <!-- From Uiverse.io by PriyanshuGupta28 -->
            <div class="checkbox-wrapper d-flex justify-content-center">
                <input asp-for="IsVisible" type="checkbox">
                <label class="terms-label" asp-for="IsVisible">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 200 200" class="checkbox-svg">
                        <mask fill="white" id="path-1-inside-1_476_5-37">
                            <rect height="200" width="200"></rect>
                        </mask>
                        <rect mask="url(#path-1-inside-1_476_5-37)" stroke-width="40" class="checkbox-box" height="200" width="200"></rect>
                        <path stroke-width="15" d="M52 111.018L76.9867 136L149 64" class="checkbox-tick"></path>
                    </svg>
                    <span class="label-text">是否顯示於前台?</span>
                </label>
            </div>
            <!-- From Uiverse.io by vinodjangid07 -->
            <div class="d-flex justify-content-end">
                <button type="submit" class="submitBtn">
                    送出
                    <svg fill="white" viewBox="0 0 448 512" height="1em" class="arrow"><path d="M438.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-160-160c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L338.8 224 32 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l306.7 0L233.4 393.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l160-160z"></path></svg>
                </button>
            </div>
        </div>
    </div>
</form>

