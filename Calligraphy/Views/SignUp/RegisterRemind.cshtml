@{
    Layout = null;
}
@{
    ViewData["Title"] = "註冊成功";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<style>
    .notice-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        text-align: center;
    }
    /* From Uiverse.io by eirikvold */
    button {
        font-family: inherit;
        font-size: 18px;
        background: linear-gradient(to bottom, #4dc7d9 0%,#66a6ff 100%);
        color: white;
        padding: 0.8em 1.2em;
        display: flex;
        align-items: center;
        justify-content: center;
        border: none;
        border-radius: 25px;
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s;
    }

    button:hover {
        transform: translateY(-3px);
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3);
    }

    button:active {
        transform: scale(0.95);
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
    }

    button span {
        display: block;
        margin-left: 0.4em;
        transition: all 0.3s;
    }

    button svg {
        width: 18px;
        height: 18px;
        fill: white;
        transition: all 0.3s;
    }

    button .svg-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.2);
        margin-right: 0.5em;
        transition: all 0.3s;
    }

    button:hover .svg-wrapper {
        background-color: rgba(255, 255, 255, 0.5);
    }

    button:hover svg {
        transform: rotate(45deg);
    }

</style>

<div class="notice-container">
    <h2>@ViewData["Title"]</h2>
    <p>我們已發送一封驗證信至您的信箱，請點擊信中的連結以啟用帳號。</p>
    <p>驗證完成後，您將自動登入並返回首頁。</p>
    <p>如未收到驗證信請檢查垃圾郵件</p>
    <p style="font-size:small;">P.S.因網路伺服器可能負載, 30分鐘後仍未收到請聯絡客服或是按下重新寄送。</p>
    <form asp-action="ResendConfirmEmail" style="margin:2em;" asp-controller="SignUp" method="post">
        <input type="hidden" name="email" value="@ViewBag.Email" />
        <!-- From Uiverse.io by eirikvold -->
        <button type="submit">
            <div class="svg-wrapper-1">
                <div class="svg-wrapper">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                        <path fill="none" d="M0 0h24v24H0z"></path>
                        <path fill="currentColor" d="M1.946 9.315c-.522-.174-.527-.455.01-.634l19.087-6.362c.529-.176.832.12.684.638l-5.454 19.086c-.15.529-.455.547-.679.045L12 14l6-8-8 6-8.054-2.685z"></path>
                    </svg>
                </div>
            </div>
            <span>重新寄送驗證信</span>
        </button>
    </form>
</div>

<script src="~/sweetalert2/sweetalert2.all.min.js"></script>
@if (TempData["ResendMessage"] != null && (bool)TempData["ResendMessage"])
{
    <script type="text/javascript">
        Swal.fire("驗證信已寄送，請檢查您的信箱。");
    </script>
}