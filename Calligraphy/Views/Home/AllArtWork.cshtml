@model IEnumerable<Calligraphy.ViewModel.ArtWorkViewModel>
@{
    ViewData["Title"] = "已上傳作品";
}

@section Styles {
    <link href="~/assets/css/styles.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/material-components-web/14.0.0/material-components-web.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/2.1.7/css/dataTables.material.css" rel="stylesheet" />
}

<div style="display:none;">
    @Html.AntiForgeryToken()
</div>

<div class="card">
    <div class="card-body">
        <div class="d-block align-items-center">
            <div>
                <h4 class="card-title">@ViewData["Title"]</h4>
            </div>
            <table id="ArtTable" class="mdl-data-table table-hover text-center" style="width:100%">
                <thead class="text-nowrap">
                    <tr>
                        <th scope="col" class="text-muted">
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th scope="col" class="text-muted">
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th scope="col" class="text-muted">
                            @Html.DisplayNameFor(model => model.CreatedYear)
                        <th scope="col" class="text-muted">
                            @Html.DisplayNameFor(model => model.Style)
                        </th>
                        <th scope="col" class="text-muted">
                            @Html.DisplayNameFor(model => model.Material)
                        </th>
                        <th scope="col" class="text-muted">
                            @Html.DisplayNameFor(model => model.Size)
                        </th>
                        <th scope="col" class="text-muted">
                            @Html.DisplayNameFor(model => model.IsVisible)
                        </th>
                        <th scope="col" class="text-muted">
                            操作
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<!--編輯視窗-->
<div class="modal fade" id="EditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body Edit">
                ...
            </div>
        </div>
    </div>
</div>

<!--圖片視窗-->
<div class="modal fade" id="PicModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body Picture">
                ...
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/material-components-web/14.0.0/material-components-web.min.js"></script>
    <script src="https://cdn.datatables.net/2.1.7/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.1.7/js/dataTables.material.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.3.2/js/dataTables.fixedHeader.min.js"></script>
    <script src="~/js/artwork.js" asp-append-version="true"></script>
}
